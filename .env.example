# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_ALLOWED_CHAT_IDS=your_chat_id  # 可用逗號分隔多個 ID

# Whisper 本地模型設定
WHISPER_MODEL_SIZE=base  # tiny, base, small, medium, large-v2, large-v3
WHISPER_DEVICE=cpu  # cpu 或 cuda (需要 NVIDIA GPU)

# Ollama 本地 LLM 設定 (無需 API Key)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b  # 可選: qwen2.5:3b, qwen2.5:14b, llama3.2:3b
OLLAMA_VISION_MODEL=minicpm-v  # 視覺分析模型

# Roam Research
ROAM_GRAPH_NAME=your_graph_name

# Webhook 設定 (可選，用於 Telegram Webhook 模式)
WEBHOOK_URL=  # 例如: https://your-tunnel.trycloudflare.com

# Claude Code 同步 (可選，需先設定 Roam MCP)
CLAUDE_CODE_SYNC_ENABLED=false

# 系統設定
RETRY_INTERVAL_HOURS=1
MAX_RETRY_COUNT=3
TEMP_VIDEO_DIR=./temp_videos
DATABASE_URL=sqlite+aiosqlite:///./app.db
